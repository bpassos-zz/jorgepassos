<%= render "layouts/header" %>

  <div class="container">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    <%= render "layouts/footer" %>

    <!-- 
         This is a debugging tool only running in development environment 
         params is a YAML representation (hash) in this case identifies the controller and action for the page
    -->
    <%= debug(params) if Rails.env.development? %>
  </div>

</html>
